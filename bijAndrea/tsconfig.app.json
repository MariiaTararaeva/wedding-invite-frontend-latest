{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JS target (could use ES2022 as well)
    "lib": ["ES2020", "DOM", "DOM.Iterable"],    // Include DOM libraries for browser APIs
    "module": "ESNext",                          // Use ESNext modules (Vite will bundle)
    "moduleResolution": "bundler",              // Use TS5's bundler resolution for Vite&#8203;:contentReference[oaicite:6]{index=6}
    "allowImportingTsExtensions": true,         // Allow imports of TS files by path (Vite handles these)
    "isolatedModules": true,                    // Required for TS when not doing full program transpile (as Vite/esbuild handles transpilation)
    "resolveJsonModule": true,                  // (Optional) Allow importing .json files if needed
    "jsx": "react-jsx",                         // Enable React 17+ JSX transform&#8203;:contentReference[oaicite:7]{index=7}
    "useDefineForClassFields": true,            // Align class field semantics with JS (standard in TS now)
    "strict": true,                             // Enable strict type-checking
    "skipLibCheck": true,                       // Skip checking .d.ts files for faster builds
    "noUnusedLocals": true,                     // Lint-like checks
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,       // Warn on imports with side effects not being used
    "noEmit": true                              // Weâ€™re not emitting from tsc (Vite does bundling), so no JS output needed
  },
  "include": ["src"]                             // Include all your application source files
}
